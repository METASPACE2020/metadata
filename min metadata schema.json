{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://raw.githubusercontent.com/METASPACE2020/metadata/master/min%20metadata%20schema.json",
  "title": "Metadata Submission",
  "description": "Minimal metadata for imaging mass spectrometry (imaging MS) as developed in the METASPACE project",
  "type": "object",
  "definitions": {
    "person": {
      "type": "object",
      "description": "Name and contact email for a human",
      "properties": {
        "Surname": {
          "type": "string"
        },
        "First_Name": {
          "type": "string"
        },
        "Email": {
          "type": "string",
          "description": "required so we can notify you when your dataset is processed"
        }
      }
    }
  },
  "properties": {
    "Sample_Information": {
      "type": "object",
      "required": ["Organism", "Organism_Part", "Condition"],
      "description": "Information about the imaging sample.  Please select 'other' and enter '-' if not applicable",
      "properties": {
        "Organism": {
          "description": "species of organism",
          "type": "string"
        },
        "Organism_Part": {
          "description": "part of the organism",
          "type": "string"
        },
        "Condition": {
          "description": "treatment group or disease state of the organism",
          "type": "string"
        },
        "Sample_Growth_Conditions": {
          "description": "How the organism was grown",
          "type": "string"
        }
      }
    },
    "Sample_Preparation": {
      "description": "Information about the imaging sample. Please select 'other' and enter '-' if not applicable",
      "type": "object",
      "required": ["Sample_Stabilisation", "Tissue_Modification",
                   "MALDI_Matrix", "MALDI_Matrix_Application"],
      "properties": {
        "Sample_Stabilisation": {
          "description": "Quenching or preservation method used",
          "type": "string"
        },
        "Tissue_Modification": {
          "description": "Post stabilisation tissue modification",
          "type": "string"
        },
        "MALDI_Matrix": {
          "description": "The MALDI matrix used (if any)",
          "type": "string"
        },
        "MALDI_Matrix_Application": {
          "description": "Method of MALDI matrix application (if any)",
          "type": "string"
        }
      }
    },
    "MS_Analysis": {
      "type": "object",
      "description": "Details of the image acquisition",
      "required": ["Polarity", "Ionisation_Source", "Analyzer"],
      "properties": {
        "Polarity": {
          "description": "Instrument polarity used",
          "type": "string",
          "enum": [
            "Positive",
            "Negative"
          ]
        },
        "Ionisation_Source": {
          "description": "Type of ionisation source used",
          "type": "string"
        },
        "Analyzer": {
          "description": "Mass analyser used",
          "type": "string"
        },
        "Detector_Resolving_Power": {
          "type": "object",
          "title": "Detector Resolving Power",
          "description": "Accurate estimate of the resolving power for the dataset, and the m/z at which it was estimated",
          "required": ["mz", "Resolving_Power"],
          "properties": {
            "mz": {
              "description": "m/z at which the resolving power was calculated (Orbitrap resolution is quoted at m/z=200)",
              "type": "number",
              "minimum": 50,
              "maximum": 5000,
              "default": 200
            },
            "Resolving_Power": {
              "description": "Peak FWHM / m/z",
              "type": "number",
              "minimum": 10000,
              "maximum": 1000000
            }
          }
        }
      }
    },
    "Submitted_By": {
      "type": "object",
      "description": "Information about the uploader",
      "required": ["Institution", "Submitter"],
      "properties": {
        "Institution": {
          "type": "string"
        },
        "Submitter": {
          "$ref": "#/definitions/person",
          "required": ["Surname", "First_Name", "Email"]
        },
        "Principal_Investigator": {
          "$ref": "#/definitions/person"
        }
      }
    },
    "metaspace_options":{
      "type": "object",
      "description": "Processing options for the METASPACE engine",
      "required": ["Metabolite_Database", "Dataset_Name"],
      "properties":{
        "Metabolite_Database": {
          "description": "Choose a metabolite database to use",
          "type": "string"
        },
        "Dataset_Name":{
          "description": "A name for your dataset",
          "type": "string"
        }
      }
    },
    "Additional_Information": {
      "type": "object",
      "properties": {
        "Publication_DOI": {
          "type": "string"
        },
        "Sample_Description_Freetext": {
          "description": "Additional information about your sample (you can simply paste the relevant methods section from a publication)",
          "type": "string"
        },
        "Sample_Preparation_Freetext": {
          "description": "Additional information about your sample preparation (you can simply paste the relevant methods section from a publication)",
          "type": "string"
        },
        "Additional_Information_Freetext": {
          "description": "Additional information about your experiment (you can simply paste the methods section from a publication)",
          "type": "string"
        },
        "Expected_Molecules_Freetext": {
          "description": "A \"|\" separated list of molecules or database ids that you know are present in the sample",
          "type": "string"
        }
      }
    }
  }
}
